import argparse


def p(s):
    for i in s:
        print(i)
    print(len(s))


parser = argparse.ArgumentParser(description='description')
parser.add_argument(
    'integers',
    metavar='number1',
    type=int,
    nargs='+',
    help='the number one')
parser.add_argument(
    '--sum',
    dest='accumulate',
    action='store_const',
    help='sum...',
    const=sum,
    default=p)

args = parser.parse_args()
print(args.accumulate(args.integers))
